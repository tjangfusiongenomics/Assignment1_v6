@model IEnumerable<ZenithDataLib.Model.Event>

@{
    ViewBag.Title = "Index";
}

<h2>List of Events</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EventId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventFromDateAndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventToDateAndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EventId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventFromDateAndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventToDateAndTime)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EventId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EventId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EventId })
        </td>
    </tr>
}

</table>
